      <xs:enumeration value="Magical" />
      <xs:enumeration value="Elemental" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="EquipmentSlot">
    <xs:restriction base="xs:token">
      <xs:enumeration value="None" />
      <xs:enumeration value="Weapon" />
