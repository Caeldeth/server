      <xs:enumeration value="Metal" />
      <xs:enumeration value="Undead" />
      <xs:enumeration value="RandomFour" />
      <xs:enumeration value="RandomEight"/>
      <xs:enumeration value="Random"/>
    </xs:restriction>
  </xs:simpleType>

