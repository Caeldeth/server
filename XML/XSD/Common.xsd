  <!-- A list of classes -->
  <xs:simpleType name="ClassList">
      <xs:list itemType="hyb:Class" />
  </xs:simpleType>
 
  <!--  Gender (for item restrictions) -->
  <xs:simpleType name="Gender">
    <xs:restriction base="xs:token">
      <xs:enumeration value="Neutral" />
